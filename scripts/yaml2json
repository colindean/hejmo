#!/usr/bin/env ruby
require 'json'
require 'yaml'

def yaml_as_ruby(data)
  YAML.parse(data).to_ruby
end

file = ARGV.pop
data = if file == '-'
         STDIN.read
       else
         File.read(file)
       end

if ENV['PRETTY']
  puts JSON.pretty_generate(yaml_as_ruby(data))
else
  puts yaml_as_ruby(data).to_json
end
